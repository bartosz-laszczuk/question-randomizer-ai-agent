# Kubernetes Secret Template
# Copy this file to secret.yml and replace with actual base64-encoded values
# DO NOT commit secret.yml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: agent-secrets
  labels:
    app: agent-service
type: Opaque
data:
  # Base64-encoded Firebase service account credentials JSON
  # Encode: echo -n '{"type":"service_account",...}' | base64
  firebase-credentials-json: YOUR_BASE64_ENCODED_FIREBASE_CREDENTIALS

  # Base64-encoded Anthropic API key
  # Encode: echo -n 'sk-ant-api03-xxxxx' | base64
  anthropic-api-key: YOUR_BASE64_ENCODED_ANTHROPIC_API_KEY

  # Base64-encoded Redis password (optional, leave empty if no password)
  # Encode: echo -n 'your-redis-password' | base64
  redis-password: ""

---
# Example of how to create secret from command line:
#
# kubectl create secret generic agent-secrets \
#   --from-file=firebase-credentials-json=./firebase-credentials.json \
#   --from-literal=anthropic-api-key=sk-ant-api03-xxxxx \
#   --from-literal=redis-password=your-redis-password
