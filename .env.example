# Question Randomizer AI Agent Service - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment: development, test, or production
NODE_ENV=development

# Server port
PORT=3002

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=debug

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase project ID (required)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase credentials - use ONE of the following:

# Option 1: Path to service account JSON file (recommended for development)
FIREBASE_CREDENTIALS_PATH=./firebase-dev-credentials.json

# Option 2: Service account JSON as string (recommended for production)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account",...}

# =============================================================================
# ANTHROPIC CONFIGURATION
# =============================================================================

# Anthropic API key (required)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (optional, leave empty if no password)
REDIS_PASSWORD=

# Redis TLS (true/false)
REDIS_TLS=false

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Number of concurrent agent tasks (1-10)
QUEUE_CONCURRENCY=3

# Max retry attempts for failed tasks (0-10)
QUEUE_MAX_RETRIES=3

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================

# Agent task timeout in milliseconds (default: 120000 = 2 minutes)
AGENT_TIMEOUT_MS=120000

# HTTP request timeout in milliseconds (default: 150000 = 2.5 minutes)
REQUEST_TIMEOUT_MS=150000

# =============================================================================
# OBSERVABILITY
# =============================================================================

# Enable HTTP request logging (true/false)
ENABLE_REQUEST_LOGGING=true
